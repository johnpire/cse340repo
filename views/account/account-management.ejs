<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (loggedin && accountData) { %>
  <div class="account-container">
    <h2>Welcome <%= accountData.account_firstname %></h2>
    <p>You're logged in.</p>
    
    <div class="account-actions">
      <a href="/account/update" class="btn">Update Account Information</a>
    </div>
    
    <!-- show only for Employee/Admin -->
    <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
      <div class="inventory-section">
        <h3>Inventory Management</h3>
        <a href="/inv/" class="btn">Manage Inventory</a>
      </div>
    <% } %>
  </div>
  
<% } else { %>
  <p class="notice">Please log in to view your account.</p>
<% } %>