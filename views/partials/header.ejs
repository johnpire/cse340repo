<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">
        <%# note how log-in data is managed in Util.checkJWTToken. Also I'm using it as a reference for this  %>
        <% if (typeof loggedin !== 'undefined' && loggedin) { %> <%# cookies will be created upon log-in so it will not recognize loggedin beforehand %>
          <a title="Go to account management" href="/account">Welcome <%= accountData.account_firstname %></a>
          <a title="Click to logout" href="/account/logout">Logout</a>
        <% } else { %>
          <a title="Click to log in" href="/account/login">My Account</a>
        <% } %>
    </div>
</header>